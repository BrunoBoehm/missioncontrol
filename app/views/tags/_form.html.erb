<%= form_for @tag do |f| %>
	<div class="input-group">
		<%= f.label :name, class: "input-group-addon" %>
		<%= f.text_field :name, class: "form-control", placeholder: "Give a name to the new Tag" %>
	</div>	
	<div class="actions">
		<%= f.submit "Save Tag", class: "btn btn-success" %>
	</div>	
<% end %>