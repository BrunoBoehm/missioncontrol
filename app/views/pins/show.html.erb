<div class="panel panel-default">
	<div class="panel-heading">
		<h2 class="panel-title"><%= @pin.title %><span class="pull-right"><%= link_to @pin.url %></span></h2>
	</div>

	<div class="panel-body">
		<%= @pin.notes.html_safe %>
		<div class="row">
			<% images(@pin).each do |img| %>
				<div class="col-xs-12 col-md-4">
					<%= link_to img, class: "thumbnail" do %>
					  <%= image_tag img %>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>

	<nav aria-label="...">
		<ul class="pager">
			<% @pin.tags.each do |tag| %>
				<li><%= link_to "##{tag.name}", tag %></li>
			<% end %>
		</ul>
	</nav>	

	<div class="panel-footer">
		<% @pin.boards.each do |board| %>
			<span class="label label-info"><%= link_to board.title, board %></span>
		<% end %>
	</div>
</div>


<%= link_to "Edit Pin", edit_pin_path(@pin), class: "btn btn-success" %>
<%= link_to "Delete Pin", @pin, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>