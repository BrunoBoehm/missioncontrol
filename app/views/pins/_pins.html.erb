<div class="row text-center">
  <% pins.order(:id).each do |pin| %>
    <div class="col-md-3">
        <div class="blurb">
          <%= link_to image_tag( images(pin).first, class: "img-blurb" ), pin %>
          <h4><%= link_to (truncate pin.title), pin %></h4>
          <p><%= truncate pin.notes, length: 100 %></p>
          <p><%= link_to "View pin", pin %></p>
        </div>
    </div>
  <% end %>
</div>