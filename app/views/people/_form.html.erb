<%= form_for @person do |f| %>
	<div class="input-group">
		<%= f.label :name, class: "input-group-addon" %>
		<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="input-group">
		<%= f.label :surname, class: "input-group-addon" %>
		<%= f.text_field :surname, class: "form-control" %>
	</div>	
	<div class="input-group">
		<%= f.label :img, class: "input-group-addon" %>
		<%= f.text_field :img, class: "form-control" %>
	</div>	
	<div class="action">
		<%= f.submit "Save Person", class: "btn btn-success" %>
	</div>
<% end %>