<div class="container">
<h1>Listing all people</h1>

<table class="table table-hover">
	<thead>
		<tr>
			<th>id</th>
			<th>Name</th>
			<th>Surname</th>
			<th>Related Pins</th>
			<th>Related Pins ids</th>
			<th>Admin</th>
		</tr>
	</thead>
	<tbody>
		<% @people.each do |person| %>
			<tr>
				<td><%= person.id %></td>
				<td><%= link_to person.name, person %></td>
				<td><%= link_to person.surname, person %></td>
				<td><%= person.pins.map(&:title).to_sentence %></td>
				<td><%= person.pins.map(&:id).join(', ') %></td>
				<td><%= link_to "Edit", edit_person_path(person) %> | <%= link_to "Destroy", person, method: :delete, data: {confirm: "Are you sure?"} %></td>
			</tr>
		<% end %>	
	</tbody>
</table>

</div>