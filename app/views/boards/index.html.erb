<div class="container">
<h1><%= pluralize(@boards.count, "Board") %></h1>

<div class="row text-center">
  <% @boards.order(:id).each do |board| %>
    <div class="col-md-3">
        <div class="blurb">
          <%= link_to image_tag( board.img, class: "img-blurb", style: "border-bottom: 3px solid #{board.color}" ), board %>
          <div class="blurb-content">
            <h4><%= link_to (truncate board.title, length: 70), board %></h4>
            <p><%= truncate board.description, length: 100 %></p>
          </div>  
          <p class="blurb-footer"><%= link_to "View #{board.pins.count} Pins", board %></p>
        </div>
    </div>
  <% end %>
</div>
</div>

