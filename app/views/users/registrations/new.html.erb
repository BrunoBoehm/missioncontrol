<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="input-group">
            <%= f.label :name, class: "input-group-addon" %>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>

          <div class="input-group">
            <%= f.label :surname, class: "input-group-addon" %>
            <%= f.text_field :surname, autofocus: true, class: "form-control" %>
          </div>  

          <div class="input-group">
            <%= f.label :email, class: "input-group-addon" %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <div class="input-group">
            <%= f.label :password, class: "input-group-addon" %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>


        <!--   <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div> -->

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-success" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
    </div>  
  </div>    
</div>
