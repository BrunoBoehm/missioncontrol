<%= form_for @company do |f| %>
	<div class="input-group">
		<%= f.label :name, class: "input-group-addon" %>
		<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="input-group">
		<%= f.label :pitch, class: "input-group-addon" %>
		<%= f.text_area :pitch, class: "form-control", rows: 3 %>
	</div>
	<div class="input-group">
		<%= f.label :size, class: "input-group-addon" %>
		<%= f.text_field :size, class: "form-control" %>
	</div>
	<div class="input-group">
		<%= f.label :address, class: "input-group-addon" %>
		<%= f.text_field :address, class: "form-control" %>
	</div>
	<div class="input-group">
		<%= f.label :creation_date, class: "input-group-addon" %>
		<%= f.number_field :creation_date, class: "form-control" %>
	</div>						
	<div class="actions">
		<%= f.submit "Save Company", class: "btn btn-success" %>
	</div>
<% end %>