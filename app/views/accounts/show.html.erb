<div class="container">
	<h1><%= @account.name %> - Dashboard</h1>
	<%= image_tag(@account.logo) %>
	<p><%= @account.description %></p>
	<p><%= link_to "Edit Account", edit_account_path %> | Invite new users</p>
	<button class="btn btn-success">Upgrade to Premium</button>

	<br>
	<h3>Your Team</h3>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Surname</th>
				<th>Email</th>
			</tr>
		</thead>
		<tbody>
			<% @account.users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.name %></td>
				<td><%= user.surname %></td>
				<td><%= user.email %></td>
			</tr>	
			<% end %>
		</tbody>
	</table>

</div>